<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@AppStrings.Title</title>
    <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <header>
        <div class="content-wrapper">
            <a href="https://github.com/dproteau/m13n">
                <img style="position: absolute; top: 0; left: 0; border: 0;" src="https://s3.amazonaws.com/github/ribbons/forkme_left_green_007200.png" alt="Fork me on GitHub">
            </a>
            <div>
            <div class="">
                @Html.Partial("_CultureSwitchControl")
            </div>
           </div> 
            <div class="float-right">
                <nav>
                    <ul id="menu">
                        <li>@Html.ActionLink(AppStrings.Home, "Index", "Home", new { area = ""}, null)</li>
                        <li>@Html.ActionLink(AppStrings.About, "About", "Home", new { area = ""}, null)</li>
                        <li>@Html.ActionLink(AppStrings.Contact, "Contact", "Home", new {area = ""}, null)</li>
                        <li>@Html.ActionLink(AppStrings.Manage, "Index", "Dashboard", new {area = "Admin"}, null)</li>
                    </ul>
                </nav>
            </div>
        </div>
    </header>
    <div id="body">
        @RenderSection("featured", required: false)
        <section class="content-wrapper main-content clear-fix">
            @RenderBody()
        </section>
    </div>
    <footer>
        <div class="content-wrapper">
            <div class="float-left">
                <p>&copy; @DateTime.Now.Year - M13n</p>
            </div>
        </div>
    </footer>

    @Scripts.Render("~/bundles/jquery")
    @RenderSection("scripts", required: false)
</body>
</html>
